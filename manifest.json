{
  "manifest_version": 2,
  "name": "Batirbio Margin",
  "version": "1.0.0",
  "description": "Car les marges c'est important.",
  "icons": {
    "48": "img/icon.png",
    "128": "img/icon.png"
  },
  "homepage_url": "https://www.batirbio.org/",
  "background": {
    "scripts": ["/js/background.js"]
  },
  "browser_action": {
    "default_icon": {
      "128": "img/icon.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["*://books.zoho.eu/*"],
      "run_at": "document_end",
      "js": ["/js/main.js"],
      "css": ["batirbio.css"]
    }
  ],
  "permissions": ["webRequest", "*://books.zoho.eu/*"],
  "web_accessible_resources": ["pagescript.js"]
}
